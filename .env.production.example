# =============================================================================
# FitnessAI Production Environment Variables
# =============================================================================
# Copy this to .env.production and fill in real values.
# NEVER commit .env.production to git.
# =============================================================================

# --- Django Core ---
SECRET_KEY=generate-a-64-char-random-string-here
DEBUG=False
ALLOWED_HOSTS=your-droplet-ip,localhost

# --- Database ---
DB_NAME=fitnessai
DB_USER=fitnessai_user
DB_PASSWORD=generate-a-strong-password-here

# --- Frontend URL (used for Stripe redirects, email links, CORS) ---
# Set this to http://<your-droplet-ip>
FRONTEND_URL=http://your-droplet-ip

# --- Next.js API URL (baked into JS bundle at build time) ---
# Set this to http://<your-droplet-ip>
NEXT_PUBLIC_API_URL=http://your-droplet-ip

# --- CORS & CSRF ---
# Comma-separated origins
CORS_ALLOWED_ORIGINS=http://your-droplet-ip
CSRF_TRUSTED_ORIGINS=http://your-droplet-ip

# --- OpenAI (optional — AI features disabled without this) ---
OPENAI_API_KEY=

# --- Stripe (optional — payment features disabled without this) ---
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

